  "private": false,
  "sideEffects": false,
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "main": "./dist/solid-chart.js",
  "module": "./dist/solid-chart.js",
  "types": "./dist/solid-chart.d.ts",
  "solid": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/solid-chart.d.ts",
      "solid": "./src/index.ts",
      "import": "./dist/solid-chart.js"
    }
  },
  "scripts": {
    "dev": "vite",
